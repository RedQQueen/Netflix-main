{
  "builds": [
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/:slug",
      "destination": "/",
      "permanent": true
    }
  ]
}
